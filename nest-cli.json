{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/translations/**/*",
        "watchAssets": true,
        "outDir": "dist/"
      }
    ],
    "plugins": [
      "@nestjs/swagger"
    ]
  }
}